---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import SimpleSlider from './SimpleSlider.astro';

export interface Props {
  title: string;
  date: string; // ISO string
  users?: string;
  url?: string;
  stack: string[];
  screenshots?: Array<{
    image: ImageMetadata;
    caption?: string;
    alt?: string;
  }>;
}

const { title, date, users, url, stack, screenshots = [] } = Astro.props;
const dateObj = new Date(date);
const formatted = dateObj.toLocaleDateString('lt-LT');
const year = String(dateObj.getFullYear());
const tags = stack.join(',');
---

<article class="project-block space-y-6 relative" data-year={year} data-tags={tags}>
  <span class="timeline-dot" aria-hidden="true"></span>
  
  <header class="space-y-2">
    <h3>{title}
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" title={`Nuoroda į šį projektą: ${title}`} class="inline-block align-middle hover:bg-primary hover:text-bg">
          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-right"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
          <span class="sr-only">Nuoroda į projektą</span>
        </a>
      )}
    </h3>
    
    <div class="flex gap-x-6 gap-y-4 items-center leading-none text-sm flex-wrap">
      <ul class="stack flex flex-wrap gap-2 list-none p-0">
        {stack.map((t) => (
          <li class="m-0 bg-primary text-bg py-1 px-2">{t}</li>
        ))}
      </ul>
      
      <time datetime={date} class="">{formatted}</time>

      {users && <span class="users">{users}</span>}
    </div>
  </header>

  {screenshots.length > 0 && (
      <div class="screens">
        <SimpleSlider items={screenshots} ariaLabel={`${title} screenshots`} />
      </div>
    )}

  <div class="content space-y-4">
    <slot />
  </div>
</article>

<style>
  .project-block {
    padding-left: 1.5rem; 
  }

  .timeline-dot {
    position: absolute;
    left: calc(-0.5rem / 2 + 1px); /* aligns with timeline line */
    top: 0.625rem; /* aligning with heading */
    width: 0.5rem;
    height: 0.5rem;
    background: currentColor;
  }
</style>